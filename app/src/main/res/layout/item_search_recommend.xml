<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/recommendGridImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_11"
        android:layout_marginStart="@dimen/space_6"
        android:layout_marginEnd="@dimen/space_6"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_11"
        android:layout_marginStart="@dimen/space_6"
        android:layout_marginEnd="@dimen/space_6"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_clover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/recommendWebtoonTitle"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/gray_90"
        android:text=""
        android:layout_marginTop="@dimen/space_6"
        android:layout_marginBottom="@dimen/space_4"
        app:layout_constraintTop_toBottomOf="@id/recommendGridImg"
        app:layout_constraintStart_toStartOf="@id/recommendGridImg"
        app:layout_constraintEnd_toEndOf="@id/recommendGridImg"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>