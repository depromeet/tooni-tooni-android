<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_favorites"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_favorites_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/favorites_thumbnail"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_favorites_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingExtra="1sp"
        android:text="급식아빠"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/gray90"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/cv_favorites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_favorites_writer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:text="김재한"
        android:textColor="@color/gray50"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_favorites"
        app:layout_constraintTop_toBottomOf="@id/tv_favorites_title" />

    <LinearLayout
        android:id="@+id/ll_favorites_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_favorites"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_favorites_writer"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_favorites_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스토리 | 액션"
            android:textColor="@color/gray80"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_favorites_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.9"
            android:textColor="@color/gray90"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv_favorites_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(100)"
            android:textSize="8sp"
            android:textColor="#333333"
            android:layout_marginStart="2dp"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_direction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/ic_favorites_direction" />

</androidx.constraintlayout.widget.ConstraintLayout>