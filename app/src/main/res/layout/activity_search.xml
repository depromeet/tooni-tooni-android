<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="319dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/search_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_btn" />

        <TextView
            android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:text="@string/common_search_title"
            android:textColor="@color/gray_90"
            android:textSize="@dimen/font_size_24"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/search_hint"
            app:layout_constraintEnd_toEndOf="@+id/backBtn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/backBtn" />

        <EditText
            android:id="@+id/search_hint"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="@string/common_search_hint"
            android:textColor="@color/gray_50"
            app:layout_constraintBottom_toTopOf="@+id/search_line"
            app:layout_constraintEnd_toStartOf="@+id/search_line"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/search_title" />

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@id/search_line"
            app:layout_constraintStart_toEndOf="@id/search_hint"
            app:layout_constraintTop_toTopOf="@id/search_hint"
            app:srcCompat="@drawable/ic_search" />

        <View
            android:id="@+id/search_line"
            android:layout_width="335dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="#000000"
            app:layout_constraintEnd_toEndOf="@+id/search_img"
            app:layout_constraintStart_toStartOf="@+id/search_hint"
            app:layout_constraintTop_toBottomOf="@+id/search_hint" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recommend"
            android:layout_width="327dp"
            android:layout_height="96dp"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="@+id/search_line"
            app:layout_constraintStart_toStartOf="@+id/search_line"
            app:layout_constraintTop_toBottomOf="@+id/search_line">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:layout_width="193dp"
            android:layout_height="43dp"
            android:layout_marginTop="38dp"
            app:layout_constraintEnd_toEndOf="@+id/search_recommend"
            app:layout_constraintStart_toStartOf="@+id/search_recommend"
            app:layout_constraintTop_toBottomOf="@+id/search_recommend"
            android:background="@drawable/ic_search_design"
            android:text="@string/common_search_recommend"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16"
            android:paddingRight="18dp"
            android:drawableRight="@drawable/ic_refresh" />
<!--
        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/ic_refresh"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="653dp" />
            -->
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
